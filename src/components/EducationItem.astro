---
const { date, degree, institution, description, grade } = Astro.props;
---
<article class="flex flex-col gap-4">
    <h3 class="text-xl font-bold text-yellow-400">{degree}</h3>
    <h4 class="text-lg strong">{institution}</h4>
    <div class="flex justify-between">
    <p class="text-gray-600">{date} </p>
    <h1 class="text-right font-bold text-yellow-400 align-right" >{grade}</h1>
    </div>
    <p>{description}</p>
    <br>
   
</article>